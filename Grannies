using System;

namespace Grannies
{
    class Program
    {
        static void Main(string[] args)
        {
            int queueSize;
            int doctorsTime = 10;
            int queueTime;

            Console.WriteLine("You go into the hospital and see queue of grannies. How many grannies do you see?");
            Console.WriteLine($"I see {queueSize = Convert.ToInt32(Console.ReadLine())} grannies");
            queueTime = queueSize * doctorsTime;
            int hourTime = queueTime / 60;
            int minutesTime = queueTime % 60;
            Console.Write($"You must stay in queue {hourTime} hours {minutesTime} min ");
        }
    }
}
