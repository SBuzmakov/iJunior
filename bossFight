                                            {
                                                Console.ForegroundColor = ConsoleColor.Blue;
                                                Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

