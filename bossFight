            Console.WriteLine("Когда-то давно.");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.SetCursorPosition(80, 11);
            Console.WriteLine("Царство Мидгард.");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.WriteLine("Старец:\n\t-Эй! Ты в порядке?");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.WriteLine("Старец:\n\t-Очнись!");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.SetCursorPosition(0, 3);
            Console.WriteLine("-Что, где это я, что произошло, кто вы?");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.WriteLine("Старец:\n\t-Неважно кто я, считай просто старый, мудрый скиталец. Проходя по лесу близ поселения Викия, я увидел в его стороне яркую вспышку света по среди ясного неба над замком Акерсхус. Из рассказов дедов, я отлично помню, что это дурное предзнаменование.");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.WriteLine("Старец:\n\t-Я увидел тебя , лежащую без сознания на опушке леса. Завидев меня от тебя начала убегать в сторону Викии фигура, похожая на Королевского солдата с мешком через плечо.");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.SetCursorPosition(0, 3);
            Console.WriteLine("-Я начинаю что-то вспоминать. Наверное, это был мой мешок с зельями. Мне было поручено наварить большую партию и доставить их Королю. Кажется он предчувствовал что-то плохое...");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.SetCursorPosition(0, 3);
            Console.WriteLine("-...Рагнарёк... близок ");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();

            while (heroSelected != true)
            {
                Console.WriteLine("Старец:\n-Познания о зельях и легендах Мидгарда? \nКто же ты, дитя :  ведьма или волшебница?");
                heroChoice = Console.ReadLine();

                switch (heroChoice)
                {
                    case "ведьма":
                        Console.WriteLine("\nСтарец:\n- Ну, конечно. Этот тонкий изящный силует, красивое острое лицо, легкие зеленые одеяния. Я слышал о тебе, ты та самая ведьма : искуный знаток, как наносить недоброжелателям большой физический урон ядом" +
                            ", еще и с начальными знаниями магии огня!");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.SetCursorPosition(0, 3);
                        Console.WriteLine("- После яркой вспышки я помню всего два заклинания: ядолужиум и огний...");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено заклинание :\n\t\"ядолужиум\" - создать ядовитую лужу. Высокий физический урон. ");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено заклинание :\n\t\"огний\" - бросить огненный шар. Низкий магический урон.");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено :\n\t\"увернуться\" - попробовать увернуться от атаки врага.");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        heroChoice = "ведьма";
                        heroSelected = true;
                        break;

                    case "волшебница":
                        Console.WriteLine("\n\nСтарец:\n- Ну, конечно. Эта пышная фигура, красивое круглое лицо, голубая мантия. Я слышал о тебе, ты та самая волшебница : искусный лекарь, знаток, как наносить недоброжелателям " +
                            "большой магический урон электричеством, еще и с начальными знаниями физического урона водой!");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.SetCursorPosition(0, 3);
                        Console.WriteLine("- После яркой вспышки я помню всего два заклинания: акваджетий и шаромолниум...");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено заклинание :\n\t\"акваджетий\" - ударить водяным потоком. Низкий физический урон. ");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено заклинание :\n\t\"шаромолниум\" - ударить шаровой молнией. Высокий магический урон. ");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        Console.WriteLine("Изучено :\n\t\"увернуться\" - попробовать увернуться от атаки врага.");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();
                        Console.Clear();
                        heroChoice = "волшебница";
                        heroSelected = true;
                        break;
                    default:
                        break;
                }
            }

            while (namePlayer == "")
            {
                Console.WriteLine("Как тебя звать?");
                namePlayer = Console.ReadLine();
                Console.Clear();
            }

            if (namePlayer == "Трисс Меригольд")
            {
                coeffExpUpg = 10f;
                goodsCost = 50;
                Console.WriteLine("Fair Play mode OFF.");
                Console.ForegroundColor = Console.BackgroundColor;
                Console.ReadKey();
                Console.ResetColor();
                Console.Clear();
            }

            Console.WriteLine("Старец:\n\t- " + namePlayer + ", поспешим же скорее в сторону замка Акерсхус и разберемся в чем дело!");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();
            Console.WriteLine("Старец:\n\t- если во время схватки с врагом ты забудешь как действовать, то вместо заклинания произнеси \"подсказка\"!");
            Console.ForegroundColor = Console.BackgroundColor;
            Console.ReadKey();
            Console.ResetColor();
            Console.Clear();

            while (theEnd == false && dead ==false)
            {
                if (canDrop == true)
                {
                    chanceDrop = random.Next(0, 11);
                    canDrop = false;

                    if (chanceDrop <= 6)
                    {
                        chanceDrop = random.Next(0, 4);
                        if (chanceDrop == 0)
                        {
                            cureValue++;
                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine("\n\tВ карманах врага вы обнаружили Лекарство, пополняющее здоровье!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        else if ( chanceDrop == 1)
                        {
                            potionValue++;
                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine("\n\tВ карманах врага вы обнаружили Зелье, пополняющее ману!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        else if (chanceDrop == 2)
                        {
                            essentionValue++;
                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine("\n\tВ карманах врага вы обнаружили Эссенцию, пополняющее Божественную броню!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        else if (canDropArtefact == true && chanceDrop == 3)
                        {
                            artefactValue++;
                            canDropArtefact = false;
                            Console.ForegroundColor = ConsoleColor.DarkMagenta;
                            Console.WriteLine("\n\tВ карманах врага вы обнаружили украденный БОЖЕСТВЕННЫЙ АРТЕФАКТ.");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Изучено :\n\t\"воткнуть Тюрфинг\" - нанести фатальный удар Ёрмунганду.");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- когда у Ёрмунганда останется одна лишь капля здоровья, воткни в него меч Тюрфинг, а потом добей заклинанием!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }
                    }

                    chanceDrop = random.Next(1, 200);
                    goldValue += chanceDrop;

                    Console.ForegroundColor = ConsoleColor.DarkMagenta;
                    Console.WriteLine("\n\tВ карманах врага вы обнаружили золотых монет:  " + chanceDrop);
                    Console.ForegroundColor = Console.BackgroundColor;
                    Console.ReadKey();
                    Console.ResetColor();
                    Console.Clear();
                }

                if (playerExp >= expLevelUp)
                {
                    playerLevel++;
                    Console.ForegroundColor = ConsoleColor.DarkCyan;
                    Console.WriteLine("\n\n\n*************************************************************************************************************");
                    Console.Write("\nПоздравляем, ваш персонаж достиг " + playerLevel + " уровня! Вы стали сильнее, но и враги не дремлют!\n");
                    Console.WriteLine("\n*************************************************************************************************************\n");
                    Console.ForegroundColor = Console.BackgroundColor;
                    Console.ReadKey();
                    Console.ResetColor();
                    Console.WriteLine("\nСтарец:\n- В разрушенной библиотеке в древних рукописях я нашел для тебя следующую информацию. Слушай и запоминай хорошенько, " + namePlayer + "! А пока ты тренируешься, я продолжу поиски!\n");
                    Console.ForegroundColor = Console.BackgroundColor;
                    Console.ReadKey();
                    Console.ResetColor();
                    if (heroChoice == "ведьма")
                    {

                        if (playerLevel == 2)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"кобриум\" - призвать ядовитую змею. Высший физический урон.");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- Вспышка света была приходом Ёрмунганда - змея-дракона - сына Локи и великанши Ангрбоды, предвестника Рагнарёка - гибели всего мира. Если мы его не остановим, всё царство Мидгард будет обречено!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- Вспышка поработила разум армии королевских солдат, а сам Змей, кажется, вселился в самого Короля, восседающего в замке Акерсхус. Даже не вздумай соваться к нему, пока не наберешься достаточно опыта в заклинаниях и своей силе!" +
                                "Удар короля, порабащенного Ёрмунгандом смертелен! Мидгард будет обречен, если ты погибнешь!");

                        }

                        if (playerLevel == 3)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"лупий\" - призвать магическую лупу. Низший магический урон. ");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- в карманах порабощенных королевских прислужников ты можешь найти свои зелья, но не советую растрачивать их зря!");
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.WriteLine("Изучено  :\n\t\"выпить лекарство\"\n\t\"выпить зелье\"\n\t\"вдохнуть эссенцию\" ");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        if (playerLevel == 4)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"ядолужиум + лупий\" - поджечь ядовитую лужу магической лупой (произнести в двух атаках последовательно).Высочайший магический урон, доп урон в физическую броню. ");
                        }

                        if (playerLevel == 5)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"манум\" - сильная прибавка к мане, но значительно  уменьшает количество вашего здоровья! ");
                        }

                        if (playerLevel == 6)
                        {
                            Console.WriteLine("Старец:\n\t- Легенды гласят, что победить Ёрмунганда сможет только лишь некий Божественный артефакт. Информацию о нём знал, к сожалению, только наш Король Викии");
                        }

                        if (playerLevel == 7)
                        {
                            Console.WriteLine("Старец:\n\t- " + namePlayer + ", тебе осталось изучить лишь одно, самое мощное заклинание, пожалуйста, поторопись, в твоих руках судьба не только Викии, но и всего Мидгарда!");
                        }

                        if (playerLevel == 8)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"огний + дэдливайперсмерчиум\" - призвать дух смертельной гадюки (произнести в двух атаках последовательно).Ультра урон. ");
                        }
                    }

                    if (heroChoice == "волшебница")
                    {

                        if (playerLevel == 2)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"разрядиум\" - удар электрическим разрядом. Высший магический урон. ");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- Вспышка света была приходом Ёрмунганда - змея-дракона - сына Локи и великанши Ангрбоды, предвестника Рагнарёка - гибели всего мира. Если мы его не остановим, всё царство Мидгард будет обречено!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- Вспышка поработила разум армии королевских солдат, они бродят в окрестностях замка, а сам Змей, кажется, вселился в самого Короля, восседающего в замке Акерсхус. Даже не вздумай соваться к нему, пока не наберешься достаточно опыта в заклинаниях и своей силе!" +
                                "Удар порабащенного Ёрмунганда смертелен! Мидгард будет обречен, если ты погибнешь!");
                        }

                        if (playerLevel == 3)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"кипятокий\" - создать кипящую водяную лужу. Низший физический урон.");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();
                            Console.WriteLine("Старец:\n\t- в карманах порабощенных королевских прислужников ты можешь найти свои зелья, но не советую растрачивать их зря!");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.WriteLine("Изучено  :\n\t\"выпить лекарство\"\n\t\"выпить зелье\"\n\t\"вдохнуть эссенцию\" ");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        if (playerLevel == 4)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"кипятокий + шаромолниум\" - возвратить шаровую молнию с помощью лужи (произнести в двух атаках последовательно). Сильная прибавка к здоровью и броне. Дополнительный урон в физическую и магическую броню. ");
                        }

                        if (playerLevel == 5)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"хэлзум\" - сильная прибавка к здоровью, но значительно  уменьшает количество твоей маны!");
                        }

                        if (playerLevel == 6)
                        {
                            Console.WriteLine("Старец:\n\t- Легенды гласят, что победить Ёрмунганда сможет только лишь некий Божественный артефакт. Информацию о нём знал, к сожалению, только наш Король Викии");
                        }

                        if (playerLevel == 7)
                        {
                            Console.WriteLine("Старец:\n\t- " + namePlayer + ", тебе осталось изучить лишь одно, самое мощное заклинание, пожалуйста, поторопись, в твоих руках судьба не только Викии, но и всего Мидгарда!");
                        }

                        if (playerLevel == 8)
                        {
                            Console.WriteLine("Изучено заклинание :\n\t\"акваджетий + сверхпроводничиумолегиус\" - призыв Олега. Ультра урон.");
                        }
                    }
                    Console.ForegroundColor = Console.BackgroundColor;
                    Console.ReadKey();
                    Console.ResetColor();

                    expLevelUp *= coeffLevel;
                    healthUpdate *= coeffHealthPlayer;
                    dmgUpdate *= coeffDmg;
                    shieldUpdate *= coeffShieldUpg;
                    manaUpdate *= coeffManaUpg;
                    manaRecovery *= coeffManaRecovery;
                    coeffExpUpg += 0.2f;
                    coeffBossHealthUpg *= 1.4f;
                    coeffBossDmgUpg *= 1.4f;
                    coeffMinionDmgUpg *= 1.3f;
                    coeffMinionHealthUpg *= 1.7f;
                    lowestSpellMana *= coeffSkillManaUpg;
                    highestSpellMana *= coeffSkillManaUpg;
                    highSpellMana *= coeffSkillManaUpg;
                    lowSpellMana *= coeffSkillManaUpg;
                    highestSpellMana = Convert.ToInt32(highestSpellMana);
                    highSpellMana = Convert.ToInt32(highSpellMana);
                    lowestSpellMana = Convert.ToInt32(lowestSpellMana);
                    lowSpellMana = Convert.ToInt32(lowSpellMana);
                    healthUpdate = Convert.ToInt32(healthUpdate);
                    dmgUpdate = Convert.ToInt32(dmgUpdate);
                    shieldUpdate = Convert.ToInt32(shieldUpdate);
                    manaUpdate = Convert.ToInt32(manaUpdate);
                }

                leftExp = expLevelUp - playerExp;
                playerHealth = healthUpdate;
                playerMana = manaUpdate;
                playerShield = shieldUpdate;
                playerDmg = dmgUpdate;
                coeffCrit = critUpd;
                critDmg = 1.5f;
                missDmg = 0f;
                canDrop = false;
                gotExp = Convert.ToInt32(coeffExpUpg * random.Next(80, 120));
                Convert.ToInt32(playerHealth);
                Convert.ToInt32(playerShield);
                Convert.ToInt32(playerMana);
                Convert.ToInt32(highestSpellMana);
                Convert.ToInt32(highSpellMana);
                Convert.ToInt32(lowestSpellMana);
                Convert.ToInt32(lowSpellMana);
                Convert.ToInt32(leftExp);
                Console.Clear();

                Console.ForegroundColor = ConsoleColor.Green;
                Console.WriteLine("\n\n\n}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{");
                Console.WriteLine("\n\t" + heroChoice + " " + namePlayer + " " + playerLevel + " уровня, " + Convert.ToInt32(playerHealth) + " очков здоровья, " + Convert.ToInt32(playerMana) + " маны, " + Convert.ToInt32(playerShield) + " божественной брони.\n Лекарства : "
                    + cureValue + " шт. Зелья: " + potionValue + " шт. Эссенции: " + essentionValue + " шт. Золотых монет : " + goldValue + ".\n До следующего уровня персонажа нужно получить " + leftExp + " опыта.\n");

                if (canFightBigBoss)
                {
                    if (canDropArtefact)
                    {
                        Console.ForegroundColor = ConsoleColor.DarkRed;
                        Console.WriteLine("Необходимо найти Божественный артефакт!");
                        Console.ForegroundColor = ConsoleColor.Green;
                    }
                    
                    if (artefactValue != 0)
                    {
                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine("Божественный артефакт найден");
                        Console.ForegroundColor = ConsoleColor.Green;
                    }
                }

                Console.WriteLine("}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{}{");
                Console.ResetColor();

                if (canFightBigBoss == false)
                {
                    Console.Write("\n" + namePlayer + ", куда отправишься? \n\t1 - Окрестности замка Акерсхус. \n\t2 - Ворваться в тронный зал замка.\n\t0 - войти в землянку ");
                }

                else if (canFightBigBoss == true)
                {
                    Console.Write("\n" + namePlayer + ", куда отправишься? \n\t1 - Окрестности замка Акерсхус. \n\t3 - Спуститься в подвал замка.\n\t0 - войти в землянку ");
                }

                if (heroChoice == "ведьма")
                {
                    Console.WriteLine("Волшебницы");
                }

                if (heroChoice == "волшебница")
                {
                    Console.WriteLine("Ведьмы");
                }

                string locationChoice = Console.ReadLine();

                switch (locationChoice)
                {
                    case "0":
                        shopChoice = "";

                        while (shopChoice != "4")
                        {
                            Console.Clear();
                            Console.WriteLine(namePlayer + ", привет. Добро пожаловать в мою лавку!\n\nЧто пожелаешь приобрести? Всё стоит всего по " + goodsCost + " золотых монет:\n\t1 - лекарство\n\t2 - зелье\n\t3 - эссенция\n\t4 - выйти из землянки ");
                            Console.WriteLine("У вас золотых монет: " + goldValue);

                            shopChoice = Console.ReadLine();

                            switch (shopChoice)
                            {
                                case "1":
                                    if (goldValue >= goodsCost)
                                    {
                                        cureValue++;
                                        goldValue -= goodsCost;
                                        Console.WriteLine("\nКуплено лекарство.");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.WriteLine("\nИзвини, " + namePlayer + ", у тебя не хватает золотых монет!");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    break;
                                case "2":
                                    if (goldValue >= goodsCost)
                                    {
                                        potionValue++;
                                        goldValue -= goodsCost;
                                        Console.WriteLine("\nКуплено зелье.");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.WriteLine("\nИзвини, " + namePlayer + ", у тебя не хватает золотых монет!");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    break;
                                case "3":
                                    if (goldValue >= goodsCost)
                                    {
                                        cureValue++;
                                        goldValue -= goodsCost;
                                        Console.WriteLine("\nКуплена эссенция.");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.WriteLine("\nИзвини, " + namePlayer + ", у тебя не хватает золотых монет!");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    break;
                                case "4":
                                    Console.WriteLine("\nДо встречи, " + namePlayer);
                                    Console.ForegroundColor = Console.BackgroundColor;
                                    Console.ReadKey();
                                    Console.ResetColor();
                                    break;                               
                            }                           
                        }
                        break;
                    case "1":
                        Console.Clear();
                        Console.WriteLine("\nОкрестности замка Акерсхус.");
                        minionHealth = Convert.ToInt32(coeffMinionHealthUpg * random.Next(10, 50));
                        magicShield = Convert.ToInt32(coeffMinionHealthUpg * random.Next(10, 50));
                        physShield = Convert.ToInt32(coeffMinionHealthUpg * random.Next(10, 50));

                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine("\n\n\n#########################################################################################################");
                        Console.WriteLine("\nНовая схватка с королевским прислужником с " + minionHealth + " здоровья. " + magicShield + " магической брони. " + physShield + " физической брони.");
                        Console.ForegroundColor = Console.BackgroundColor;
                        Console.ReadKey();
                        Console.ResetColor();

                        for (int i = 0; minionHealth >= 1; i++)
                        {
                            Console.Clear();

                            if (playerMana < manaUpdate && canAttack == true)
                            {
                                playerMana += manaUpdate * manaRecovery;
                                playerMana = Convert.ToInt32(playerMana);
                                Console.ForegroundColor = ConsoleColor.Blue;
                                Console.WriteLine("\n\n\nмана восстанавливается на " + Convert.ToInt32(manaUpdate * manaRecovery));
                                Console.ResetColor();
                            }

                            if (mixElementComboOff == true || ultraComboOff == true)
                            {
                                mixElementComboOn = false;
                                mixElementComboOff = false;
                                ultraComboOn = false;
                                ultraComboOff = false;
                            }

                            canAttack = true;

                            coeffCrit = critUpd;
                            playerDmg = dmgUpdate;
                            minionDmg = minionDmgUpd;
                            minionHealth = Convert.ToInt32(minionHealth);
                            magicShield = Convert.ToInt32(magicShield);
                            physShield = Convert.ToInt32(physShield);
                            minionHealth = Convert.ToInt32(minionHealth);
                            magicShield = Convert.ToInt32(magicShield);
                            playerShield = Convert.ToInt32(playerShield);
                            highestSpellMana = Convert.ToInt32(highestSpellMana);
                            highSpellMana = Convert.ToInt32(highSpellMana);
                            lowestSpellMana = Convert.ToInt32(lowestSpellMana);
                            lowSpellMana = Convert.ToInt32(lowSpellMana);

                            Console.ForegroundColor = ConsoleColor.Blue;
                            Console.WriteLine("\n####АТАКА#" + (i + 1) + "##############################################################################################");
                            Console.WriteLine("\n" + heroChoice + " " + namePlayer + ": " + playerHealth + "/" + healthUpdate + " очков здоровья, " + playerMana + "/" + manaUpdate + " маны, " + playerShield + "/" + shieldUpdate + " Божественной брони." +
                                "\nКаждый ход мана восстанавливается на " + Convert.ToInt32(manaUpdate * manaRecovery) +
                                "\nЛекарства : "
                                + cureValue + " шт. Зелья: " + potionValue + " шт. Эссенции: " + essentionValue + " шт. \nКоролевский прислужник: " + minionHealth + " здоровья. " + magicShield + " магической брони. " + physShield + " физической брони.");
                            Console.ResetColor();
                            Console.WriteLine("____________________________________________________________________________");
                            Console.WriteLine("\n\t\tВы атакуете , произнесите заклинание!");
                            Console.Write("\t");

                            Console.ForegroundColor = ConsoleColor.DarkGray;
                            playerCast = Console.ReadLine();
                            Console.ResetColor();
                            rateCriticalMiss = random.Next(0, 11);

                            if (rateCriticalMiss < 1 && playerCast != "подсказка")
                            {
                                coeffCrit = critDmg;
                                Console.ForegroundColor = ConsoleColor.Cyan;
                                Console.WriteLine("\tВы слышите Божественный голос внутри головы, преисполняетесь боевым духом и наносите критический удар!");
                                Console.ResetColor();
                            }

                            else if (rateCriticalMiss > 9 && playerCast != "подсказка")
                            {
                                coeffCrit = missDmg;
                                Console.ForegroundColor = ConsoleColor.DarkRed;
                                Console.WriteLine("\tВы слышите зловещий шёпот внутри головы, во время произношения заклинания рот становится ватным, и вы промахиваетесь мимо врага!");
                                Console.ResetColor();
                            }

                            switch (playerCast)
                            {
                                case "увернуться":
                                    ultraComboOn = false;
                                    mixElementComboOn = false;
                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                    Console.WriteLine("\nВы пытаетесь увернуться от атаки");
                                    Console.ResetColor();
                                    break;
                                case "кобриум":
                                    ultraComboOn = false;
                                    mixElementComboOn = false;
                                    randomDmg = random.Next(8, 13) / 10f;
                                    highestSpellDmg = playerDmg * coeffHighestSpell * coeffCrit * randomDmg;
                                    highestSpellDmg = Convert.ToInt32(highestSpellDmg);

                                    if (heroChoice == "ведьма" && playerMana >= highestSpellMana && playerLevel >= 2)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkGreen;
                                        Console.WriteLine("\nВедьма поднимает руки вверх и между ними появляется зеленый светящийся шар, из которого на врага бросается большая" +
                                                    " зеленая ядовитая змея!");
                                        Console.ResetColor();

                                        playerMana -= highestSpellMana;

                                        if (physShield >= 1)
                                        {
                                            physShield -= highestSpellDmg;

                                            if (physShield < 1)
                                            {
                                                minionHealth += physShield;
                                                physShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Green;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья, физической брони " +
                                                    "больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (physShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона по физической броне. У врага осталось еще " + physShield + " физической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (physShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= highestSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGreen;
                                                Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGreen;
                                                Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

                                    else if (playerMana < highestSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "огний":
                                    ultraComboOn = true;
                                    mixElementComboOn = false;
                                    randomDmg = random.Next(8, 13) / 10f;
                                    lowSpellDmg = playerDmg * coeffLowSpell * coeffCrit * randomDmg;
                                    lowSpellDmg = Convert.ToInt32(lowestSpellDmg);

                                    if (heroChoice == "ведьма" && playerMana >= lowSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkYellow;
                                        Console.WriteLine("\nВедьма складывает руки ладонями перед собой и между ними появляется магический огненный шар, который она швыряет во врага и поджигает его!");
                                        Console.ResetColor();

                                        playerMana -= lowSpellMana;

                                        if (magicShield >= 1)
                                        {
                                            magicShield -= lowSpellDmg;

                                            if (magicShield < 1)
                                            {
                                                minionHealth += magicShield;
                                                magicShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья, магической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (magicShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (magicShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= lowSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth > 0)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                Console.WriteLine("\nвы наносите " + lowSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

                                    else if (playerMana < lowSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "ядолужиум":
                                    ultraComboOn = false;
                                    mixElementComboOn = true;
                                    randomDmg = random.Next(8, 13) / 10f;
                                    highSpellDmg = playerDmg * coeffHighSpell * coeffCrit * randomDmg;
                                    highSpellDmg = Convert.ToInt32(highSpellDmg);

                                    if (heroChoice == "ведьма" && playerMana >= highSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.Green;
                                        Console.WriteLine("\nВедьма поднимает руки вверх и между ними появляется зеленый светящийся шар, он устремляется под врага " +
                                            "и образует булькающую отравляющую лужу");
                                        Console.ResetColor();

                                        playerMana -= highSpellMana;

                                        if (physShield >= 1)
                                        {
                                            physShield -= highSpellDmg;

                                            if (physShield < 1)
                                            {
                                                minionHealth += physShield;
                                                physShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Green;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + highSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья, физической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (physShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + highSpellDmg + " урона по физической броне. У врага осталось еще " + physShield + " физической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (physShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= highSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Green;
                                                Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Green;
                                                Console.WriteLine("\nВы наносите " + highSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

                                    else if (playerMana < highSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "лупий":
                                    ultraComboOn = false;
                                    randomDmg = random.Next(8, 13) / 10f;
                                    lowestSpellDmg = playerDmg * coeffLowestSpell * coeffCrit * randomDmg;
                                    lowestSpellDmg = Convert.ToInt32(lowestSpellDmg);

                                    if (heroChoice == "ведьма" && playerMana >= lowestSpellMana && playerLevel >= 3)
                                    {
                                        Console.ForegroundColor = ConsoleColor.Yellow;
                                        Console.WriteLine("\nВедьма складывает руки ладонями перед собой, пока шепчет заклинание. Пространство над ней начинает искриться и возникает гигантское круглое стекло," +
                                            "которое с помощью лучей солнца поджигает врага!");
                                        Console.ResetColor();

                                        if (mixElementComboOn == true && playerLevel >= 4)
                                        {
                                            lowestSpellDmg *= coeffMixedSpell;
                                            lowestSpellMana *= coeffMixedMana;                                           

                                            if (playerMana < lowestSpellMana)
                                            {
                                                lowestSpellMana /= coeffMixedMana;
                                                Console.ForegroundColor = ConsoleColor.DarkRed;
                                                Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА МИКСОВАННОЕ ЗАКЛИНАНИЕ!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            playerMana -= lowestSpellMana;
                                            lowestSpellMana /= coeffMixedMana;

                                            Console.BackgroundColor = ConsoleColor.DarkGreen;
                                            Console.ForegroundColor = ConsoleColor.DarkYellow;
                                            Console.WriteLine("Лучи солнца, проходящие через гигантское стекло, поджигают еще оставшуюся ядовитую лужу, происходит мощный взрыв!");
                                            Console.BackgroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.DarkYellow;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("");
                                            Console.ResetColor();

                                            physShield -= lowestSpellDmg;

                                            Console.ForegroundColor = ConsoleColor.DarkGray;
                                            Console.WriteLine("\nВы наносите дополнительный " + lowestSpellDmg + " урон в физическую броню!");
                                            Console.ResetColor();

                                            if (physShield < 1)
                                            {
                                                physShield = 0;
                                            }

                                            mixElementComboOff = true;
                                        }

                                        playerMana -= lowestSpellMana;                                        

                                        if (magicShield >= 1)
                                        {
                                            magicShield -= lowestSpellDmg;

                                            if (magicShield < 1)
                                            {
                                                minionHealth += magicShield;
                                                magicShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Yellow;
                                                    Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья, магической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (magicShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (magicShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= lowestSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Yellow;
                                                Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Yellow;
                                                Console.WriteLine("\nвы наносите " + lowestSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

                                    else if (playerMana < lowestSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "дэдливайперсмерчиум":
                                    mixElementComboOn = false;
                                    ultraSpellMana = 500f;

                                    if (ultraComboOn == true && heroChoice == "ведьма" && playerMana >= ultraSpellMana && playerLevel >= 8)
                                    {
                                        playerMana -= ultraSpellMana;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        ultraSpellDmg = playerDmg * coeffUltra * coeffCrit * randomDmg;
                                        lowestSpellDmg = Convert.ToInt32(ultraSpellDmg);

                                        Console.BackgroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("");
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.DarkYellow;
                                        Console.WriteLine("После яростного крика ведьмы, начинает дуть сильнейший ветер. Над врагом появляется исполинского размера дух гадюки " +
                                            "фиолетового цвета. Дотлевающие угольки Огния вспыхивают в мощном огненном смерче!");
                                        Console.BackgroundColor = ConsoleColor.Green;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.DarkYellow;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.Green;
                                        Console.WriteLine("");
                                        Console.ResetColor();

                                        if (magicShield >= 1)
                                        {
                                            magicShield -= ultraSpellDmg;

                                            if (magicShield < 1)
                                            {
                                                minionHealth += magicShield;
                                                magicShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в магическую броню. У врага осталось " + minionHealth + " здоровья, магической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (magicShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        if (physShield >= 1)
                                        {
                                            physShield -= ultraSpellDmg;

                                            if (physShield < 1)
                                            {
                                                minionHealth += physShield;
                                                physShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nDы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось " + minionHealth + " здоровья, физической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (physShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nвы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось еще " + physShield + " физической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (magicShield < 1 && physShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= ultraSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Magenta;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Magenta;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
