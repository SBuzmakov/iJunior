                                            break;
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "манум":

                                        if (heroChoice == "ведьма" && playerHealth > healthUpdate * coeffRecoverySkill && playerLevel >= 5)
                                        {
                                            playerMana += manaUpdate;
                                            playerHealth -= Convert.ToInt32(healthUpdate * coeffRecoverySkill);

                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine("\nВедьма шепчет заклинание, тратя на него здоровье, но чувствует мощный прилив маны.");
                                            Console.ResetColor();
                                        }

                                        else if (heroChoice == "ведьма" && playerHealth <= healthUpdate * coeffRecoverySkill && playerLevel >= 5)
                                        {
                                            Console.WriteLine("\nКоличество здоровья не позволяет вам прошептать заклинание!");
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НИЧЕГО НЕ ПРОИСХОДИТ!");
                                            Console.ResetColor();
                                        }
                                        break;
                                    case "разрядиум":
                                        ultraComboOn = false;
                                        mixElementComboOn = false;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        highestSpellDmg = playerDmg * coeffHighestSpell * coeffCrit * randomDmg;
                                        highestSpellDmg = Convert.ToInt32(highestSpellDmg);

                                        if (heroChoice == "волшебница" && playerMana >= highestSpellMana && playerLevel >= 2)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("\nВолшебница поднимает руки вверх и между ними появляется электрический светящийся шар, из которого на врага обрушивается электрический разряд!");
                                            Console.ResetColor();

                                            playerMana -= highestSpellMana;

                                            if (magicShield >= 1)
                                            {
                                                magicShield -= highestSpellDmg;

                                                if (magicShield < 1)
                                                {
                                                    bossHealth += magicShield;
                                                    magicShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Cyan;
                                                        Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, магической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (magicShield > 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона по магической броне. У врага осталось " + magicShield + " магической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (magicShield < 1 && bossHealth > 1)
                                            {
                                                bossHealth -= highestSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Cyan;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Cyan;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < highestSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "акваджетий":
                                        ultraComboOn = true;
                                        mixElementComboOn = false;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        lowSpellDmg = playerDmg * coeffLowSpell * coeffCrit * randomDmg;
                                        lowSpellDmg = Convert.ToInt32(lowSpellDmg);

                                        if (heroChoice == "волшебница" && playerMana >= lowSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine("\nВедьма складывает руки ладонями перед собой и между ними появляется магический водяной шар, из которого во врага вылетает мощный водяной поток!");
                                            Console.ResetColor();
                                            playerMana -= lowSpellMana;

                                            if (physShield >= 1)
                                            {
                                                physShield -= lowSpellDmg;

                                                if (physShield < 1)
                                                {
                                                    bossHealth += physShield;
                                                    physShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Blue;
                                                        Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, физической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (physShield > 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nвы наносите " + lowSpellDmg + " урона по физической броне. У врага осталось " + physShield + " физической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (physShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= lowSpellDmg;

                                                if (bossHealth <= 0)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Blue;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth > 0)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Blue;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < lowSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "шаромолниум":
                                        ultraComboOn = false;
                                        mixElementComboOn = true;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        highSpellDmg = playerDmg * coeffHighSpell * coeffCrit * randomDmg;
                                        highSpellDmg = Convert.ToInt32(highSpellDmg);

                                        if (heroChoice == "волшебница" && playerMana >= highSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("\nВолшебница поднимает руки вверх и между ними появляется электрический светящийся шар, из которого на врага обрушивается шаровая молния!");
                                            Console.ResetColor();

                                            playerMana -= highSpellMana;

                                            if (magicShield >= 1)
                                            {
                                                magicShield -= highSpellDmg;

                                                if (magicShield < 1)
                                                {
                                                    bossHealth += magicShield;
                                                    magicShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Cyan;
                                                        Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, магической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (magicShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nвы наносите " + highSpellDmg + " урона по магической броне. У врага осталось " + magicShield + " магической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (magicShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= highSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Cyan;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Cyan;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < highSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "кипятокий":
                                        ultraComboOn = false;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        lowestSpellDmg = playerDmg * coeffLowestSpell * coeffCrit * randomDmg;
                                        lowestSpellDmg = Convert.ToInt32(lowestSpellDmg);

                                        if (heroChoice == "волшебница" && playerMana >= lowestSpellMana && playerLevel >= 3)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine("\nВедьма складывает руки ладонями перед собой, пока шепчет заклинание. Пространство над ней начинает бурлить водяными пузырями и под врага устремляется" +
                                                " кипящая лужа кипятка!");
                                            Console.ResetColor();

                                            if (mixElementComboOn == true && playerLevel >= 4)
                                            {
                                                lowestSpellMana *= coeffMixedMana;

                                                if (playerMana < lowestSpellMana)
                                                {
                                                    lowestSpellMana /= coeffMixedMana;
                                                    Console.ForegroundColor = ConsoleColor.DarkRed;
                                                    Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА МИКСОВАННОЕ ЗАКЛИНАНИЕ!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                playerMana -= lowestSpellMana;
                                                lowestSpellDmg *= coeffMixedFairy;
                                                lowestSpellDmg = Convert.ToInt32(lowestSpellDmg);
                                                playerHealth += Convert.ToInt32(healthUpdate);
                                                playerShield += Convert.ToInt32(shieldUpdate * coeffMixedFairy);

                                                Console.BackgroundColor = ConsoleColor.DarkBlue;
                                                Console.ForegroundColor = ConsoleColor.Cyan;
                                                Console.WriteLine("Шаровая молния возвращается к волшебнице, даруя ей жизненные силы, отобранные у врага!");
                                                Console.BackgroundColor = ConsoleColor.Blue;
                                                Console.WriteLine("");
                                                Console.BackgroundColor = ConsoleColor.White;
                                                Console.WriteLine("");
                                                Console.BackgroundColor = ConsoleColor.DarkCyan;
                                                Console.WriteLine("");
                                                Console.ResetColor();

                                                magicShield -= lowestSpellDmg;
                                                physShield -= lowestSpellDmg;

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите дополнительный " + lowestSpellDmg + " урон в магическую броню!");
                                                Console.WriteLine("\nВы наносите дополнительный " + lowestSpellDmg + " урон в физическую броню!");
                                                Console.ResetColor();

                                                if (magicShield < 1)
                                                {
                                                    magicShield = 0;
                                                }

                                                if (physShield < 1)
                                                {
                                                    physShield = 0;
                                                }

                                                mixElementComboOff = true;
                                                lowestSpellMana /= coeffMixedMana;
                                                break;
                                            }

                                            playerMana -= lowestSpellMana;

                                            if (physShield >= 1)
                                            {
                                                physShield -= lowestSpellDmg;

                                                if (physShield < 1)
                                                {
                                                    bossHealth += physShield;
                                                    physShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Blue;
                                                        Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, физической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (physShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона по физической броне. У врага осталось еще " + physShield + " физической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (physShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= lowestSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Blue;
                                                    Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Blue;
                                                    Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < lowestSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "сверхпроводничиумолегиус":
                                        mixElementComboOn = false;

                                        if (ultraComboOn == true && heroChoice == "волшебница" && playerMana >= ultraSpellMana && playerLevel >= 8)
                                        {
                                            playerMana -= ultraSpellMana;
                                            randomDmg = random.Next(8, 13) / 10f;
                                            ultraSpellDmg = playerDmg * coeffUltra * coeffCrit * randomDmg;
                                            ultraSpellDmg = Convert.ToInt32(ultraSpellDmg);

                                            Console.BackgroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("");
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.DarkCyan;
                                            Console.WriteLine("После яростного крика волшебницы, начинает дуть сильнейший ветер. Около врага в светящемся шаре появляется Олег из будущего царства Земля и " +
                                                "втыкает в еще мокрого от Акваджетия врага провода под напряжением. Врага крутит в мощном электрическом торнадо!");
                                            Console.BackgroundColor = ConsoleColor.Blue;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.White;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("");
                                            Console.ResetColor();

                                            if (magicShield >= 1)
                                            {
                                                magicShield -= ultraSpellDmg;

                                                if (magicShield < 1)
                                                {
                                                    bossHealth += magicShield;
                                                    magicShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                                        Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в магическую броню. У врага осталось " + bossHealth + " здоровья, магической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (magicShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            if (physShield >= 1)
                                            {
                                                physShield -= ultraSpellDmg;

                                                if (physShield < 1)
                                                {
                                                    bossHealth += physShield;
                                                    physShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                                        Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось " + bossHealth + " здоровья, физической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (physShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось еще " + physShield + " физической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (magicShield < 1 && physShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= ultraSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < ultraSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                            break;
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "хэлзум":

                                        if (heroChoice == "волшебница" && playerMana > manaUpdate * coeffRecoverySkill && playerLevel >= 5)
                                        {
                                            playerHealth += healthUpdate;
                                            playerMana -= Convert.ToInt32(manaUpdate * coeffRecoverySkill);

                                            Console.ForegroundColor = ConsoleColor.Blue;
                                            Console.WriteLine("\nВолшебница шепчет заклинание, тратя на него много маны, но чувствует мощный прилив здоровья.");
                                            Console.ResetColor();
                                        }

                                        else if (heroChoice == "волшебница" && playerMana < manaUpdate * coeffRecoverySkill && playerLevel >= 5)
                                        {
                                            Console.WriteLine("\nКоличество здоровья не позволяет вам прошептать заклинание!");
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НИЧЕГО НЕ ПРОИСХОДИТ!");
                                            Console.ResetColor();
                                        }
                                        break;
                                    case "выпить лекарство":

                                        if (cureValue > 0)
                                        {
                                            cureValue--;
                                            playerHealth = healthUpdate;
                                            canAttack = false;

                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы открываете флакончик с ароматной красной жидкостью, быстро и жадно выпиваете до дна. Чувство прилива здоровья охватывает вас мгновенно");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы рыщите по карманам, но флаконов с лекарством там нет!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "выпить зелье":

                                        if (potionValue > 0)
                                        {
                                            potionValue--;
                                            playerMana = manaUpdate;
                                            canAttack = false;

                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы открываете флакончик с вонючей синей жидкостью, быстро и жадно выпиваете до дна. Чувство прилива маны охватывает вас мгновенно");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы рыщите по карманам, но флаконов с зельем там нет!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "вдохнуть эссенцию":

                                        if (essentionValue > 0)
                                        {
                                            essentionValue--;
                                            playerShield = shieldUpdate;
                                            canAttack = false;

                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы открываете флакончик с Божественной Эссенцией, быстро и жадно вдыхаете её пары. Чувство прилива Божественной брони охватывает вас мгновенно");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы рыщите по карманам, но флаконов с эссенцией там нет!");
                                            Console.ResetColor();
                                        }

                                        break;

                                    case "воткнуть Тюрфинг":

                                        if (artefactValue == 1 && bossHealth == 1)
                                        {
                                            artefactUsed = true;
                                            bossHealth = 0;
                                            Console.ForegroundColor = ConsoleColor.Magenta;
                                            Console.WriteLine("\nВы втыкаете магический Божественный меч Тюрфинг прямо промеж глаз Ёрмунганду!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "подсказка":
                                        canAttack = false;

                                        Console.WriteLine("Старец: \n- Пожалуйста, " + namePlayer + ", не забывай свои заклинания и команды! Во время атаки произнеси :\n");
                                        if (heroChoice == "ведьма")
                                        {
                                            Console.WriteLine("увернуться \nвыпить лекарство \nвыпить зелье \nвдохнуть эссенцию " +
                                                " \nядолужиум - создать ядовитую лужу. Высокий физический урон. Затраты маны: " + highSpellMana + "" +
                                                " \nогний - бросить огненный шар. Низкий магический урон. Затраты маны: " + lowSpellMana);

                                            if (playerLevel >= 2)
                                            {
                                                Console.WriteLine("кобриум - призвать ядовитую змею. Высший физический урон. Затраты маны: " + highestSpellMana);
                                            }

                                            if (playerLevel >= 3)
                                            {
                                                Console.WriteLine("лупий - призвать магическую лупу. Низший магический урон. Затраты маны: " + lowestSpellMana);
                                            }

                                            if (playerLevel >= 4)
                                            {
                                                Console.WriteLine("поджечь ядовитую лужу магической лупой. Высочайший магический урон, дополнительный урон в физическую броню. " +
                                                    "Затраты маны:  " + Convert.ToInt32(lowestSpellMana + lowestSpellMana * coeffMixedMana));
                                            }

                                            if (playerLevel >= 5)
                                            {
                                                Console.WriteLine("манум - сильная прибавка к мане. Значительно уменьшает количество твоего здоровья (-" + Convert.ToInt32(healthUpdate * coeffRecoverySkill) + ")");
                                            }

                                            if (playerLevel >= 8)
                                            {
                                                Console.WriteLine("огний + дэдливайперсмерчиум - призвать дух смертельной гадюки. Ультра урон. Затраты маны:  " + ultraSpellMana);
                                            }
                                        }

                                        if (heroChoice == "волшебница")
                                        {
                                            Console.WriteLine("увернуться \nвыпить лекарство \nвыпить зелье \nвдохнуть эссенцию " +
                                                " \nакваджетий - ударить водяным потоком. Низкий физический урон. Затраты маны: " + lowSpellMana +
                                                " \nшаромолниум - ударить шаровой молнией. Высокий магический урон. Затраты маны: " + highSpellMana);

                                            if (playerLevel >= 2)
                                            {
                                                Console.WriteLine("разрядиум - удар электрическим разрядом. Высший магический урон. Затраты маны: " + highestSpellMana);
                                            }

                                            if (playerLevel >= 3)
                                            {
                                                Console.WriteLine("кипятокий - создать кипящую водяную лужу. Низший физический урон. Затраты маны: " + lowestSpellMana);
                                            }

                                            if (playerLevel >= 4)
                                            {
                                                Console.WriteLine("возвратить шаровую молнию с помощью лужи. Значительно пополняет твое здоровье и броню. Затраты маны: " + Convert.ToInt32(lowestSpellMana * coeffMixedMana));
                                            }

                                            if (playerLevel >= 5)
                                            {
                                                Console.WriteLine("хэлзум - сильная прибавка к здоровью. Значительно уменьшает количество твоей маны (-" + Convert.ToInt32(manaUpdate * coeffRecoverySkill) + ")");
                                            }

                                            if (playerLevel >= 8)
                                            {
                                                Console.WriteLine("акваджетий + сверхпроводничиумолегиус. Призыв Олега. Ультра урон. Затраты маны: " + ultraSpellMana);
                                            }
                                        }
                                        break;
                                    default:
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                        break;
                                }
                            }

                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            coeffCrit = critUpd;

                            if (canAttack == true)
                            {
                                if (bossHealth < 1)
                                {
                                    if (canFightBigBoss == true)
                                    {
                                        if (artefactUsed)
                                        {
                                            theEnd = true;
                                            Console.WriteLine("Ёрмунганд повержен");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                            Console.Clear();
                                            Console.ForegroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("Божественный свет озаряет Викию. Порабощенные солдаты и жители поселения приходят в себя.");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.Clear();
                                            Console.ForegroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("Мидгард спасён благодаря усилиям старца, Короля и " + namePlayer + "!");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                            Console.WriteLine("Но надолго ли?...");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }                                       
                                        
                                        else
                                        {
                                            bossHealth = 1;
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("Ёрмунганд не может быть повержен без Божественного артефакта!");
                                            Console.ResetColor();
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }                                                     
                                    }

                                    else
                                    {
                                        playerExp += Convert.ToInt32(gotExp * coeffBossWinExp);
                                        Console.ForegroundColor = ConsoleColor.Cyan;
                                        Console.WriteLine("\nВЫ ПОБЕДИЛИ И ПОЛУЧАЕТЕ " + Convert.ToInt32(gotExp * coeffBossWinExp) + " ОЧКОВ ОПЫТА. ВАШ ОПЫТ ТЕПЕРЬ " + playerExp);
                                        Console.ResetColor();
                                        canFightBigBoss = true;
                                        canDropArtefact = true;
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        Console.WriteLine("Порабощенный король повержен");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        Console.Clear();
                                        Console.WriteLine("Дух Ёрмунганда вылетает из порабощенного короля и просачивается в подвал замка...");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        Console.Clear();
                                        Console.WriteLine("Король Викии:\n\t- Святые Боги! Мой разум был порабощен, я всё видел, но не мог ничего предпринять!" + namePlayer + ", спасибо тебе за моё освобождение! Жаль, что ты совсем немного не успела доставить нам партию зелий, " +
                                            "но, кажется и они не помогли бы моей армии!");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        Console.Clear();
                                        Console.WriteLine("Король Викии:\n\t- перед пришествием Ёрмунганда, я успел найти Божественный артефакт - Меч Тюрфинг. Его удар невозможно отразить, нанесенная им рана всегда смертельна! Какой-то из моих солдат, порабощенный Ёрмунгандом" +
                                            " выкрал его. Найди его скорее! Без него тебе не одолеть Змея-Дракона!");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        Console.Clear();
                                        break;
                                    }
                                }

                                else if (bossHealth >= 1)
                                {
                                    Console.WriteLine("____________________________________________________________________________");
                                    Console.WriteLine("\n\t\tАтака " + bossName + ": ");

                                    rateCriticalMiss = random.Next(0, 11);
                                    randomBossSkill = random.Next(0, 11);

                                    if (randomBossSkill <= 5 && bossMana >= bossSkillMana && canFightBigBoss == true)
                                    {
                                        randomBossSkill = random.Next(0, 2);

                                        if (randomBossSkill == 0)
                                        {
                                            bossSkillFireEnabled = true;
                                            bossMana -= bossSkillMana;
                                            playerMana = 0;
                                            playerShield = 0;
                                            Console.ForegroundColor = ConsoleColor.DarkBlue;
                                            Console.BackgroundColor = ConsoleColor.Cyan;
                                            Console.WriteLine("Ёрмунганд тратя силы свей маны, изрыгает из своей пасти на вас шквал странного синего огня!\n Вы чувствуете потерю магической силы и брони... ");
                                            Console.ResetColor();
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                        }

                                        else if (randomBossSkill == 1)
                                        {
                                            bossMana -= bossSkillMana;
                                            bossSkillFireEnabled = true;
                                            Console.BackgroundColor = ConsoleColor.DarkGreen;
                                            Console.WriteLine("Ёрмунганд тратя силы свей маны, призывает несколько змей которые обвивают все ваше тело");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();                                          
                                        }
                                    }

                                    if (rateCriticalMiss < 1 && playerCast != "увернуться")
                                    {
                                        coeffCrit = critDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("Враг слышит зловещий шёпот внутри головы, преисполняется боевым духом и наносит критический удар!");
                                        Console.ResetColor();
                                    }

                                    else if (rateCriticalMiss > 9 && playerCast != "увернуться")
                                    {
                                        coeffCrit = missDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tВраг слышит Божественный голос внутри головы, во время атаки руки становятся ватными, и он промахивается мимо вас!");
                                        Console.ResetColor();
                                    }

                                    else if (playerCast == "увернуться" && rateCriticalMiss > 6)
                                    {
                                        coeffCrit = missDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tУ вас получается увернуться от атаки врага!");
                                        Console.ResetColor();
                                    }

                                    else if (playerCast == "увернуться" && rateCriticalMiss <= 6)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tУ вас не получается увернуться от атаки врага!");
                                        Console.ResetColor();

                                        if (rateCriticalMiss < 1)
                                        {
                                            coeffCrit = critDmg;
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("Враг слышит зловещий шёпот внутри головы, преисполняется боевым духом и наносит критический удар!");
                                            Console.ResetColor();
                                        }
                                    }

                                    randomDmg = random.Next(8, 13) / 10f;
                                    bossDmg *= randomDmg * coeffCrit * coeffBossDmgUpg;
                                    bossDmg = Convert.ToInt32(bossDmg);
                                    Convert.ToInt32(bossHealth);
                                    Convert.ToInt32(magicShield);
                                    Convert.ToInt32(physShield);
                                    Convert.ToInt32(bossDmg);
                                    Convert.ToInt32(playerHealth);
                                    Convert.ToInt32(playerMana);



                                    if (playerShield >= 1 && bossSkillFireEnabled == false)
                                    {
                                        playerShield -= Convert.ToInt32(bossDmg);

                                        if (playerShield < 1)
                                        {
                                            playerHealth += playerShield;
                                            playerShield = 0;
                                            Console.ForegroundColor = ConsoleColor.Gray;
                                            Console.WriteLine("\nВам нанесёно " + bossDmg + " урона. У вас осталось " + playerHealth + " здоровья, Божественной брони больше нет!");
                                            Console.ResetColor();
                                        }

                                        else if (playerShield >= 1)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Gray;
                                            Console.WriteLine("\nВам нанесёно " + bossDmg + " урона по Божественной броне. У вас осталось " + playerHealth + " здоровья, " + playerShield + " Божественной брони.");
                                            Console.ResetColor();
                                        }
                                    }

                                    else if (playerShield < 1 && playerHealth >= 1 && bossSkillFireEnabled == false)
                                    {
                                        playerHealth -= Convert.ToInt32(bossDmg);
                                        if (playerHealth < 1)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine("\nвам нанесёнo " + bossDmg + " урона.\nВЫ УМЕРЛИ");
                                            Console.ForegroundColor = Console.BackgroundColor;
                                            Console.ReadKey();
                                            Console.ResetColor();
                                            dead = true;
                                            break;
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine("\nвам нанесёнo " + bossDmg + " урона. У вас осталось " + playerHealth + " здоровья");
                                            Console.ResetColor();
                                        }
                                    }

                                    if (playerHealth < 1 && bossSkillFireEnabled == false)
                                    {
                                        Console.ForegroundColor = ConsoleColor.Red;
                                        Console.WriteLine("\nвам нанесёнo " + bossDmg + " урона.\nВЫ УМЕРЛИ");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        dead = true;
                                        break;
                                    }

                                    Console.WriteLine("____________________________________________________________________________");
                                    Console.ForegroundColor = Console.BackgroundColor;
                                    Console.ReadKey();
                                    Console.ResetColor();
                                }
                            }
                        }
                        break;
                    default:
                        break;
                     }
                }

            Console.Clear();
            Console.WriteLine("\n\n\n\n\n\n\n\n\t\t\t\t\t\t\tThe End.\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n");
            }
        }
    }
