                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("После яростного крика волшебницы, начинает дуть сильнейший ветер. Около врага в светящемся шаре появляется Олег из будущего царства Земля и " +
                                            "втыкает в еще мокрого от Акваджетия врага провода под напряжением. Врага крутит в мощном электрическом торнадо!");
                                        Console.BackgroundColor = ConsoleColor.Blue;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.White;
                                        Console.WriteLine("");
                                        Console.BackgroundColor = ConsoleColor.Cyan;
                                        Console.WriteLine("");
                                        Console.ResetColor();

                                        if (magicShield >= 1)
                                        {
                                            magicShield -= ultraSpellDmg;

                                            if (magicShield < 1)
                                            {
                                                minionHealth += magicShield;
                                                magicShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в магическую броню. У врага осталось " + minionHealth + " здоровья, магической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (magicShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        if (physShield >= 1)
                                        {
                                            physShield -= ultraSpellDmg;

                                            if (physShield < 1)
                                            {
                                                minionHealth += physShield;
                                                physShield = 0;

                                                if (minionHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Magenta;
                                                    Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось " + minionHealth + " здоровья, физической брони больше нет!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (physShield >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.DarkGray;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона в физическую броню. У врага осталось еще " + physShield + " физической брони");
                                                Console.ResetColor();
                                            }
                                        }

                                        else if (magicShield < 1 && physShield < 1 && minionHealth >= 1)
                                        {
                                            minionHealth -= ultraSpellDmg;

                                            if (minionHealth < 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Magenta;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                Console.ResetColor();
                                                break;
                                            }

                                            else if (minionHealth >= 1)
                                            {
                                                Console.ForegroundColor = ConsoleColor.Magenta;
                                                Console.WriteLine("\nВы наносите " + ultraSpellDmg + " урона. У врага осталось " + minionHealth + " здоровья");
                                                Console.ResetColor();
                                            }
                                        }
                                    }

                                    else if (playerMana < ultraSpellMana)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                        Console.ResetColor();
                                        break;
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "хэлзум":

                                    if (heroChoice == "волшебница" && playerMana > manaUpdate * coeffRecoverySkill && playerLevel >= 5)
                                    {
                                        playerHealth += healthUpdate;
                                        playerMana -= Convert.ToInt32(manaUpdate * coeffRecoverySkill);

                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine("\nВолшебница шепчет заклинание, тратя на него много маны, но чувствует мощный прилив здоровья.");
                                        Console.ResetColor();
                                    }

                                    else if (heroChoice == "волшебница" && playerMana < manaUpdate * coeffRecoverySkill && playerLevel >=5)
                                    {
                                        Console.WriteLine("\nКоличество здоровья не позволяет вам прошептать заклинание!");
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НИЧЕГО НЕ ПРОИСХОДИТ!");
                                        Console.ResetColor();
                                    }
                                    break;
                                case "выпить лекарство":

                                    if (cureValue > 0)
                                    {
                                        cureValue--;
                                        playerHealth = healthUpdate;
                                        canAttack = false;

                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы открываете флакончик с ароматной красной жидкостью, быстро и жадно выпиваете до дна. Чувство прилива здоровья охватывает вас мгновенно");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы рыщите по карманам, но флаконов с лекарством там нет!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "выпить зелье":

                                    if (potionValue > 0)
                                    {
                                        potionValue--;
                                        playerMana = manaUpdate ;
                                        canAttack = false;

                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы открываете флакончик с вонючей синей жидкостью, быстро и жадно выпиваете до дна. Чувство прилива маны охватывает вас мгновенно");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы рыщите по карманам, но флаконов с зельем там нет!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "вдохнуть эссенцию":

                                    if (essentionValue > 0)
                                    {
                                        essentionValue--;
                                        playerShield = shieldUpdate;
                                        canAttack = false;

                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы открываете флакончик с Божественной Эссенцией, быстро и жадно вдыхаете её пары. Чувство прилива Божественной брони охватывает вас мгновенно");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.Magenta;
                                        Console.WriteLine("\nВы рыщите по карманам, но флаконов с эссенцией там нет!");
                                        Console.ResetColor();
                                    }

                                    break;
                                case "подсказка":
                                    canAttack = false;

                                    Console.WriteLine("Старец: \n- Пожалуйста, " + namePlayer + ", не забывай свои заклинания! Во время атаки произнеси :\n");
                                    if (heroChoice == "ведьма")
                                    {
                                        Console.WriteLine("\nядолужиум - создать ядовитую лужу. Высокий физический урон. Затраты маны: " + highSpellMana + "" +
                                            " \nогний - бросить огненный шар. Низкий магический урон. Затраты маны: " + lowSpellMana);

                                        if (playerLevel >= 2)
                                        {
                                            Console.WriteLine("кобриум - призвать ядовитую змею. Высший физический урон. Затраты маны: " + highestSpellMana);
                                        }

                                        if (playerLevel >= 3)
                                        {
                                            Console.WriteLine("увернуться \nвыпить лекарство \nвыпить зелье \nвдохнуть эссенцию ");
                                            Console.WriteLine("лупий - призвать магическую лупу. Низший магический урон. Затраты маны: " + lowestSpellMana);
                                        }

                                        if (playerLevel >= 4)
                                        {
                                            Console.WriteLine("поджечь ядовитую лужу магической лупой. Высочайший магический урон, дополнительный урон в физическую броню. " +
                                                "Затраты маны:  " + Convert.ToInt32(lowestSpellMana + lowestSpellMana * coeffMixedMana));
                                        }

                                        if (playerLevel >= 5)
                                        {
                                            Console.WriteLine("манум - сильная прибавка к мане. Значительно уменьшает количество твоего здоровья (-" + Convert.ToInt32(healthUpdate * coeffRecoverySkill) + ")");
                                        }

                                        if (playerLevel >= 8)
                                        {
                                            Console.WriteLine("огний + дэдливайперсмерчиум - призвать дух смертельной гадюки. Ультра урон. Затраты маны:  " + ultraSpellMana);
                                        }
                                    }

                                    if (heroChoice == "волшебница")
                                    {
                                        Console.WriteLine("\nакваджетий - ударить водяным потоком. Низкий физический урон. Затраты маны: " + lowSpellMana +
                                            " \nшаромолниум - ударить шаровой молнией. Высокий магический урон. Затраты маны: " + highSpellMana);

                                        if (playerLevel >= 2)
                                        {
                                            Console.WriteLine("разрядиум - удар электрическим разрядом. Высший магический урон. Затраты маны: " + highestSpellMana);
                                        }

                                        if (playerLevel >= 3)
                                        {
                                            Console.WriteLine("увернуться \nвыпить лекарство \nвыпить зелье \nвдохнуть эссенцию ");
                                            Console.WriteLine("кипятокий - создать кипящую водяную лужу. Низший физический урон. Затраты маны: " + lowestSpellMana);
                                        }

                                        if (playerLevel >= 4)
                                        {
                                            Console.WriteLine("возвратить шаровую молнию с помощью лужи. Значительно пополняет твое здоровье и броню. Затраты маны: " + Convert.ToInt32(lowestSpellMana * coeffMixedMana));
                                        }

                                        if (playerLevel >= 5)
                                        {
                                            Console.WriteLine("хэлзум - сильная прибавка к здоровью. Значительно уменьшает количество твоей маны (-" + Convert.ToInt32(manaUpdate * coeffRecoverySkill) + ")");
                                        }

                                        if (playerLevel >= 8)
                                        {
                                            Console.WriteLine("акваджетий + сверхпроводничиумолегиус. Призыв Олега. Ультра урон. Затраты маны: " + ultraSpellMana);
                                        }
                                    }
                                    break;
                                default:
                                    Console.ForegroundColor = ConsoleColor.DarkRed;
                                    Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                    Console.ResetColor();
                                    break;
                            }

                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            coeffCrit = critUpd;

                            if (canAttack == true)
                            {
                                if (minionHealth < 1)
                                {
                                    playerExp += gotExp;
                                    Console.ForegroundColor = ConsoleColor.Cyan;
                                    Console.WriteLine("\nВЫ ПОБЕДИЛИ И ПОЛУЧАЕТЕ " + gotExp + " ОЧКОВ ОПЫТА. ВАШ ОПЫТ ТЕПЕРЬ " + playerExp);
                                    Console.ResetColor();
                                    canDrop = true;
                                    Console.ForegroundColor = Console.BackgroundColor;
                                    Console.ReadKey();
                                    Console.ResetColor();
                                    break;
                                }

                                else if (minionHealth >= 1)
                                {
                                    Console.WriteLine("____________________________________________________________________________");
                                    Console.WriteLine("\n\t\tАтака королевского прислужника: ");

                                    rateCriticalMiss = random.Next(0, 11);

                                    if (rateCriticalMiss < 1 && playerCast != "увернуться")
                                    {
                                        coeffCrit = critDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("Враг слышит зловещий шёпот внутри головы, преисполняется боевым духом и наносит критический удар!");
                                        Console.ResetColor();
                                    }

                                    else if (rateCriticalMiss > 9 && playerCast != "увернуться")
                                    {
                                        coeffCrit = missDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tВраг слышит Божественный голос внутри головы, во время атаки руки становятся ватными, и он промахивается мимо вас!");
                                        Console.ResetColor();
                                    }

                                    else if (playerCast == "увернуться" && rateCriticalMiss > 6)
                                    {
                                        coeffCrit = missDmg;
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tУ вас получается увернуться от атаки врага!");
                                        Console.ResetColor();
                                    }

                                    else if (playerCast == "увернуться" && rateCriticalMiss <= 6)
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkCyan;
                                        Console.WriteLine("\tУ вас не получается увернуться от атаки врага!");
                                        Console.ResetColor();

                                        if (rateCriticalMiss < 1 )
                                        {
                                            coeffCrit = critDmg;
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("Враг слышит зловещий шёпот внутри головы, преисполняется боевым духом и наносит критический удар!");
                                            Console.ResetColor();
                                        }
                                    }

                                    randomDmg = random.Next(8, 13) / 10f;
                                    minionDmg *= randomDmg * coeffCrit * coeffMinionDmgUpg;
                                    minionDmg = Convert.ToInt32(minionDmg);
                                    Convert.ToInt32(minionHealth);
                                    Convert.ToInt32(magicShield);
                                    Convert.ToInt32(physShield);
                                    Convert.ToInt32(minionDmg);
                                    Convert.ToInt32(playerHealth);
                                    Convert.ToInt32(playerMana);

                                    if (playerShield >= 1)
                                    {
                                        playerShield -= Convert.ToInt32(minionDmg);

                                        if (playerShield < 1)
                                        {
                                            playerHealth += playerShield;
                                            playerShield = 0;
                                            Console.ForegroundColor = ConsoleColor.Gray;
                                            Console.WriteLine("\nВам нанесёно " + minionDmg + " урона. У вас осталось " + playerHealth + " здоровья, Божественной брони больше нет!");
                                            Console.ResetColor();
                                        }

                                        else if (playerShield >= 1)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Gray;
                                            Console.WriteLine("\nВам нанесёно " + minionDmg + " урона по Божественной броне. У вас осталось " + playerHealth + " здоровья, " + playerShield + " Божественной брони.");
                                            Console.ResetColor();
                                        }
                                    }

                                    else if (playerShield < 1 && playerHealth >= 1)
                                    {
                                        playerHealth -= Convert.ToInt32(minionDmg);
                                        if (playerHealth < 1)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine("\nВАМ НАНЕСЛИ НОКАУТИРУЮЩИЙ УДАР");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.Red;
                                            Console.WriteLine("\nвам нанесёнo " + minionDmg + " урона. У вас осталось " + playerHealth + " здоровья");
                                            Console.ResetColor();
                                        }
                                    }

                                    if (playerHealth < 1)
                                    {
                                        playerExp += gotLowExp;
                                        Console.WriteLine("\nПО ВАМ ПРИХОДИТСЯ НОКАУТИРУЮЩИЙ УДАР, но вы получаете " + gotLowExp + " опыта. ОТДОХНИТЕ И СНОВА В БОЙ! \n");
                                        Console.ForegroundColor = Console.BackgroundColor;
                                        Console.ReadKey();
                                        Console.ResetColor();
                                        break;
                                    }

                                    Console.WriteLine("____________________________________________________________________________");
                                    Console.ForegroundColor = Console.BackgroundColor;
                                    Console.ReadKey();
                                    Console.ResetColor();
                                }
                            }
                        }
                        break;
                                                                                    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                    case "2":                                                       ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                    case "3":    
                        
                        if (canFightBigBoss == false && locationChoice == "3")
                        {
                            break;
                        }

                        if (canFightBigBoss == true && locationChoice == "2")
                        {
                            break;
                        }
                       
                        bossHealth = Convert.ToInt32(coeffBossHealthUpg * random.Next(140, 160));
                        magicShield = Convert.ToInt32(coeffBossHealthUpg * random.Next(140, 160));
                        physShield = Convert.ToInt32(coeffBossHealthUpg * random.Next(140, 160));


                        if (canFightBigBoss == true && locationChoice == "3")
                        {
                            bossName = "Ёрмунганд";
                            bossHealth *= coeffBigBoss;
                            Console.WriteLine("\n" + heroChoice + " " + namePlayer + " спускается по лестнице в тронном зале в подвал замка. В гигантское помещение еле-еле проникает солнечный свет сквозь крошечные окошечки." +
                                "В тёмном углу вы замечаете два светящихся красных глаза. Они стремительно приближаются к вам...");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }

                        if (locationChoice == "2" && canFightBigBoss == false)
                        {
                            Console.WriteLine("\n" + heroChoice + " " + namePlayer + " врывается в тронный зал замка Акерсхус. На троне сидит король, его глаза налиты кровью и испускают алое свечение, кожа бледно-синего цвета." +
                                " Он явно не в своем уме и не может себя контролировать! Завидев вас он встает с трона и шагает в вашу сторону...");
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                        }


                        Console.ForegroundColor = ConsoleColor.DarkMagenta;
                        Console.WriteLine("\n\n\n#########################################################################################################");
                        Console.WriteLine("\nНовая схватка с " + bossName + " с " + bossHealth + " здоровья. " + magicShield + " магической брони. " + physShield + " физической брони.");
                        Console.ResetColor();

                        for (int i = 0; bossHealth >= 1; i++)
                        {
                            Console.ForegroundColor = Console.BackgroundColor;
                            Console.ReadKey();
                            Console.ResetColor();
                            Console.Clear();

                            if (playerMana < manaUpdate && canAttack == true && bossSkillFireEnabled == false)
                            {
                                playerMana += manaUpdate * manaRecovery;
                                playerMana = Convert.ToInt32(playerMana);
                                Console.ForegroundColor = ConsoleColor.Blue;
                                Console.WriteLine("\n\n\nмана восстанавливается на " + Convert.ToInt32(manaUpdate * manaRecovery));
                                Console.ResetColor();
                            }

                            bossSkillFireEnabled = false;

                            if (mixElementComboOff == true || ultraComboOff == true)
                            {
                                mixElementComboOn = false;
                                mixElementComboOff = false;
                                ultraComboOn = false;
                                ultraComboOff = false;
                            }

                            canAttack = true;

                            coeffCrit = critUpd;
                            playerDmg = dmgUpdate;
                            bossDmg = bossDmgUpd;
                            bossHealth = Convert.ToInt32(bossHealth);
                            magicShield = Convert.ToInt32(magicShield);
                            physShield = Convert.ToInt32(physShield);
                            magicShield = Convert.ToInt32(magicShield);
                            playerShield = Convert.ToInt32(playerShield);
                            highestSpellMana = Convert.ToInt32(highestSpellMana);
                            highSpellMana = Convert.ToInt32(highSpellMana);
                            lowestSpellMana = Convert.ToInt32(lowestSpellMana);
                            lowSpellMana = Convert.ToInt32(lowSpellMana);

                            Console.ForegroundColor = ConsoleColor.Blue;
                            Console.WriteLine("\n####АТАКА#" + (i + 1) + "##############################################################################################");
                            Console.WriteLine("\n" + heroChoice + " " + namePlayer + ": " + playerHealth + "/" + healthUpdate + " очков здоровья, " + playerMana + "/" + manaUpdate + " маны, " + playerShield + "/" + shieldUpdate + " Божественной брони." +
                                "\nКаждый ход мана восстанавливается на " + Convert.ToInt32(manaUpdate * manaRecovery) +
                                "\nЛекарства : "
                                + cureValue + " шт. Зелья: " + potionValue + " шт. Эссенции: " + essentionValue + " шт. \n" + bossName + ": " + bossHealth + " здоровья. " + magicShield + " магической брони. " + physShield + " физической брони.");
                            Console.ResetColor();
                            Console.WriteLine("____________________________________________________________________________");
                            Console.WriteLine("\n\t\tВы атакуете , произнесите заклинание!");
                            Console.Write("\t");

                            Console.ForegroundColor = ConsoleColor.DarkGray;
                            playerCast = Console.ReadLine();
                            Console.ResetColor();
                            rateCriticalMiss = random.Next(0, 11);

                            if (rateCriticalMiss < 1 && playerCast != "подсказка" && bossSkillSnakesEnabled == false)
                            {
                                coeffCrit = critDmg;
                                Console.ForegroundColor = ConsoleColor.Cyan;
                                Console.WriteLine("\tВы слышите Божественный голос внутри головы, преисполняетесь боевым духом и наносите критический удар!");
                                Console.ResetColor();
                            }

                            else if (rateCriticalMiss > 9 && playerCast != "подсказка" && bossSkillSnakesEnabled == false)
                            {
                                coeffCrit = missDmg;
                                Console.ForegroundColor = ConsoleColor.DarkRed;
                                Console.WriteLine("\tВы слышите зловещий шёпот внутри головы, во время произношения заклинания рот становится ватным, и вы промахиваетесь мимо врага!");
                                Console.ResetColor();
                            }

                            if (bossSkillSnakesEnabled)
                            {
                                bossSkillFireEnabled = false;
                                Console.ForegroundColor = ConsoleColor.DarkRed;
                                Console.WriteLine("Змеи Ёрмунганда обхватили вас своей мертвой хваткой, вы не можете ни вдохнуть , ни произнести заклинание!");
                                Console.ResetColor();
                            }

                            else
                            {

                                switch (playerCast)
                                {
                                    case "увернуться":
                                        ultraComboOn = false;
                                        mixElementComboOn = false;
                                        Console.ForegroundColor = ConsoleColor.DarkGray;
                                        Console.WriteLine("\nВы пытаетесь увернуться от атаки");
                                        Console.ResetColor();
                                        break;
                                    case "кобриум":
                                        ultraComboOn = false;
                                        mixElementComboOn = false;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        highestSpellDmg = playerDmg * coeffHighestSpell * coeffCrit * randomDmg;
                                        highestSpellDmg = Convert.ToInt32(highestSpellDmg);

                                        if (heroChoice == "ведьма" && playerMana >= highestSpellMana && playerLevel >= 2)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkGreen;
                                            Console.WriteLine("\nВедьма поднимает руки вверх и между ними появляется зеленый светящийся шар, из которого на врага бросается большая" +
                                                        " зеленая ядовитая змея!");
                                            Console.ResetColor();

                                            playerMana -= highestSpellMana;

                                            if (physShield >= 1)
                                            {
                                                physShield -= highestSpellDmg;

                                                if (physShield < 1)
                                                {
                                                    bossHealth += physShield;
                                                    physShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Green;
                                                        Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, физической брони " +
                                                        "больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (physShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона по физической броне. У врага осталось еще " + physShield + " физической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (physShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= highestSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGreen;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGreen;
                                                    Console.WriteLine("\nВы наносите " + highestSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < highestSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "огний":
                                        ultraComboOn = true;
                                        mixElementComboOn = false;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        lowSpellDmg = playerDmg * coeffLowSpell * coeffCrit * randomDmg;
                                        lowSpellDmg = Convert.ToInt32(lowSpellDmg);

                                        if (heroChoice == "ведьма" && playerMana >= lowSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkYellow;
                                            Console.WriteLine("\nВедьма складывает руки ладонями перед собой и между ними появляется магический огненный шар, который она швыряет во врага и поджигает его!");
                                            Console.ResetColor();

                                            playerMana -= lowSpellMana;

                                            if (magicShield >= 1)
                                            {
                                                magicShield -= lowSpellDmg;

                                                if (magicShield < 1)
                                                {
                                                    bossHealth += magicShield;
                                                    magicShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                        Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, магической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (magicShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона по магической броне. У врага осталось еще " + magicShield + " магической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (magicShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= lowSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                    Console.WriteLine("\nВы наносите " + lowSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (bossHealth > 0)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkYellow;
                                                    Console.WriteLine("\nвы наносите " + lowSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья");
                                                    Console.ResetColor();
                                                }
                                            }
                                        }

                                        else if (playerMana < lowSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nНЕ ХВАТАЕТ МАНЫ НА ЗАКЛИНАНИЕ!");
                                            Console.ResetColor();
                                        }

                                        else
                                        {
                                            Console.ForegroundColor = ConsoleColor.DarkRed;
                                            Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НЕ НАНОСИТЕ УРОНА!");
                                            Console.ResetColor();
                                        }

                                        break;
                                    case "ядолужиум":
                                        ultraComboOn = false;
                                        mixElementComboOn = true;
                                        randomDmg = random.Next(8, 13) / 10f;
                                        highSpellDmg = playerDmg * coeffHighSpell * coeffCrit * randomDmg;
                                        highSpellDmg = Convert.ToInt32(highSpellDmg);

                                        if (heroChoice == "ведьма" && playerMana >= highSpellMana)
                                        {
                                            Console.ForegroundColor = ConsoleColor.Green;
                                            Console.WriteLine("\nВедьма поднимает руки вверх и между ними появляется зеленый светящийся шар, он устремляется под врага " +
                                                "и образует булькающую отравляющую лужу");
                                            Console.ResetColor();

                                            playerMana -= highSpellMana;

                                            if (physShield >= 1)
                                            {
                                                physShield -= highSpellDmg;

                                                if (physShield < 1)
                                                {
                                                    bossHealth += physShield;
                                                    physShield = 0;

                                                    if (bossHealth < 1)
                                                    {
                                                        Console.ForegroundColor = ConsoleColor.Green;
                                                        Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                        Console.ResetColor();
                                                        break;
                                                    }

                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона. У врага осталось " + bossHealth + " здоровья, физической брони больше нет!");
                                                    Console.ResetColor();
                                                    break;
                                                }

                                                else if (physShield >= 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.DarkGray;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона по физической броне. У врага осталось еще " + physShield + " физической брони");
                                                    Console.ResetColor();
                                                }
                                            }

                                            else if (physShield < 1 && bossHealth >= 1)
                                            {
                                                bossHealth -= highSpellDmg;

                                                if (bossHealth < 1)
                                                {
                                                    Console.ForegroundColor = ConsoleColor.Green;
                                                    Console.WriteLine("\nВы наносите " + highSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
