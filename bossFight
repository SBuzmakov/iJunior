                                        Console.ResetColor();
                                    }

                                    break;
                                case "манум":

                                    if (heroChoice == "ведьма" && playerHealth > healthUpdate * coeffRecoverySkill && playerLevel >= 5)
                                    {
                                        playerMana += manaUpdate;
                                        playerHealth -= Convert.ToInt32(healthUpdate * coeffRecoverySkill);

                                        Console.ForegroundColor = ConsoleColor.Blue;
                                        Console.WriteLine("\nВедьма шепчет заклинание, тратя на него здоровье, но чувствует мощный прилив маны.");
                                        Console.ResetColor();
                                    }

                                    else if (heroChoice == "ведьма" && playerHealth <= healthUpdate * coeffRecoverySkill && playerLevel >=5)
                                    {
                                        Console.WriteLine("\nКоличество здоровья не позволяет вам прошептать заклинание!");
                                    }

                                    else
                                    {
                                        Console.ForegroundColor = ConsoleColor.DarkRed;
                                        Console.WriteLine("\nВЫ ПРОИЗНОСИТЕ ЧУШЬ И НИЧЕГО НЕ ПРОИСХОДИТ!");
                                        Console.ResetColor();
                                    }
                                    break;
                                case "разрядиум":
                                    ultraComboOn = false;
