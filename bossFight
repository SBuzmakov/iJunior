                                                "фиолетового цвета. Дотлевающие угольки Огния вспыхивают в мощном огненном смерче!");
                                            Console.BackgroundColor = ConsoleColor.Green;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.DarkYellow;
                                            Console.WriteLine("");
                                            Console.BackgroundColor = ConsoleColor.Green;
                                            Console.WriteLine("");
                                            Console.ResetColor();

                                            if (magicShield >= 1)
                                            {
                                                magicShield -= ultraSpellDmg;

