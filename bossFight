using System;

namespace TheFirstGame
{
    class Program
    {
        static void Main(string[] args)
        {
            string heroChoice = "";
            Random random = new Random();
            string shopChoice = "";
            int goldValue = 0;
            int goodsCost = 200;
            string namePlayer = "";

            float playerHealth = 100f;
            float playerDmg = 15f;
            float highestSpellDmg = 0f;
            float highSpellDmg = 0f;
            float lowestSpellDmg = 0f;
            float lowSpellDmg = 0f;
            float ultraSpellDmg = 0f;
            float lowestSpellMana = 5f;
            float highestSpellMana = 50f;
            float highSpellMana = 35f;
            float lowSpellMana = 10f;
            float ultraSpellMana = 500f;
            float coeffHealthPlayer = 1.5f;
            float healthUpdate = playerHealth;
            float coeffDmg = 1.3f;
            float dmgUpdate = playerDmg;
            float playerShield = 50f;
            float shieldUpdate = playerShield;
            float coeffShieldUpg = 1.5f;
            float playerMana = 100f;
            float coeffManaUpg = 1.29f;
            float coeffSkillManaUpg = 1.2f;
            float coeffManaRecovery = 1.1f;
            float coeffExpUpg = 1f;
            float manaUpdate = playerMana;
            float manaRecovery = 0.125f;
            float randomDmg = 0f;
            float coeffHighestSpell = 1.9f;
            float coeffLowSpell = 0.9f;
            float coeffHighSpell = 1.25f;
            float coeffLowestSpell = 0.7f;
            float coeffUltra = 12f;
            float coeffMixedSpell = 6f;
            float coeffMixedMana = 15f;
            float coeffMixedFairy = 1.5f;
            float coeffRecoverySkill = 0.4f;
            bool mixElementComboOn = false;
            bool mixElementComboOff = false;
            bool ultraComboOn = false;
            bool ultraComboOff = false;
            bool canDropArtefact = false;
            int artefactValue = 0;
            bool artefactUsed = false;

            string playerCast;
            int playerExp = 0;
            bool heroSelected = false;
            int gotExp = random.Next(50, 100);
            int gotLowExp = gotExp / 3; 
            bool dead = false;
            int playerLevel = 1;
            int coeffLevel = 2;
            int expLevelUp = 100;
            int leftExp;
            int rateCriticalMiss = 0;
            float coeffCrit = 1f;
            float critDmg = 1.5f;
            float missDmg = 0f;
            float critUpd = 1f;
            int chanceDrop;
            int cureValue = 0;
            int potionValue = 0;
            int essentionValue = 0;
            bool canDrop = false;
            bool canAttack = true;
            bool theEnd = false;
            float coeffBossWinExp = 20f;

            float bossHealth = 500f;
            float bossDmg = 80f;
            float minionHealth;
            float minionDmg = 30f;
            float magicShield = 0f;
            float physShield = 0f;
            float minionDmgUpd = minionDmg;
            float bossDmgUpd = bossDmg;
            float coeffBossHealthUpg = 1f;
            float coeffBossDmgUpg = 1f;
            float coeffMinionDmgUpg = 1f;
            float coeffMinionHealthUpg = 1f;
            bool canFightBigBoss = false;
            bool bossSkillFireEnabled = false;
            bool bossSkillSnakesEnabled = false;
            float bossMana = 150f;
            float bossSkillMana = 30f;
            float randomBossSkill = 0f;
            string bossName = "Порабощенный король";
            float coeffBigBoss = 4f;

