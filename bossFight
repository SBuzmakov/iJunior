                                            {
                                                Console.ForegroundColor = ConsoleColor.Blue;
                                                Console.WriteLine("\nВы наносите " + lowestSpellDmg + " урона.\nВЫ НАНОСИТЕ СМЕРТЕЛЬНЫЙ УДАР!!");
                                                Console.ResetColor();
                                                break;
