using System;

namespace nekiePictures
{
    class Program
    {
        static void Main(string[] args)
        {
            int sumPict = 52;
            int pictsInLine = 3;
            int amountLines = sumPict / pictsInLine;
            int extraPicts = sumPict % pictsInLine;
            Console.WriteLine($"Amount of {pictsInLine} pictures in line is:  {amountLines}. Amount of extra pictures is {extraPicts}");
        }
    }
}
