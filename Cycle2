using System;

namespace Cycle2
{
    class Program
    {
        static void Main(string[] args)
        {
            string password = "exit";
            string userInput;

            Console.Write("Enter password: ");
            userInput = Console.ReadLine();

            while (userInput != password)
            {
                Console.Write("Enter password again: ");
                userInput = Console.ReadLine();
            }

            Console.WriteLine("You can exit now");
        }
    }
}
