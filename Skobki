using System;

namespace Skobki
{
    class Program
    {
        static void Main(string[] args)
        {
            string input;
            int sum = 0;
            int max = 0;

            Console.WriteLine("введите скобочное выражение");
            input = Console.ReadLine();

            foreach (var symbol in input)
            {
                if (symbol == '(')
                {
                    sum += 1;
                    max = sum;
                }

                else if (symbol == ')')
                {
                    sum -= 1;
                }

                else if (symbol != '(' || symbol != ')')
                {
                    Console.WriteLine("выражение неверное");
                    break;
                }

                if (sum == 0)
                {
                    Console.WriteLine("максимальная глубина скобочного выражения: " + max + ". Выражение верное");
                }
            }
        }
    }
}
