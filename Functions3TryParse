using System;

namespace ConsoleApp7
{
    class Program
    {
        static void Main(string[] args)
        {           
            ConvertToNumber();
        }

        static void ConvertToNumber()
        {
            bool canParse = false;

            while(canParse == false)
            {
                Console.Write("Введите число ");
                string userInput = Console.ReadLine();
                canParse = int.TryParse(userInput,  out int parsedNumber);

                if (canParse == true)
                {
                    Console.WriteLine("Введено число " + parsedNumber);
                }
                else
                {
                    Console.WriteLine("некорректное значение! введите число");
                    Console.ReadLine();
                    Console.Clear();
                }
            }                 
        }
    }
}
