using System;

namespace ConsoleApp7
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = GetNumber();
            Console.WriteLine(number);
        }

        static int GetNumber()
        {
            bool isNumber = false;
            int parsedNumber = 0;

            while(!isNumber)
            {
                Console.Write("Введите число ");
                string userInput = Console.ReadLine();
                isNumber = int.TryParse(userInput,  out parsedNumber);

                WriteResult(isNumber, parsedNumber);
            }

            return parsedNumber;
        }

        static void WriteResult(bool isNumber, int number)
        {
            if (isNumber)
            {
                Console.WriteLine("Введено число " + number);
            }
            else
            {
                Console.WriteLine("некорректное значение! введите число");
            }
        }
    }
}
